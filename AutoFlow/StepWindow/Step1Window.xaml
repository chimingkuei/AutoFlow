<Window x:Class="AutoFlow.StepWindow.Step1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoFlow.StepWindow"
        mc:Ignorable="d"
        Title="Step1Window" Height="450" Width="700" Background="#FFE6F0FF" Loaded="Window_Loaded">
    <Grid>
        <WrapPanel Orientation="Horizontal" Margin="36,43,448,38">
            <RadioButton x:Name="VSM" Content="點選vsm檔" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Checked="VSM_Checked"/>
            <TextBox x:Name="VSM_Text" Style="{StaticResource BaseTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="100" Height="30" Margin="10,0,0,0"/>
            <RadioButton x:Name="DTCS" Content="點選DTCS" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Checked="DTCS_Checked"/>
            <TextBox x:Name="DTCS_Text" Style="{StaticResource BaseTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="100" Height="30" Margin="13,7,0,0"/>

        </WrapPanel>
        <Button x:Name="Save_Config" Style="{StaticResource CircleButton}" Margin="442,239,163,100" Content="儲存參數" Click="Save_Config_Click"/>
    </Grid>
</Window>
