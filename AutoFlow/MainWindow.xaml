<Window x:Class="AutoFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:AutoFlow"
        mc:Ignorable="d"
        Closing="WindowClosing" 
        ResizeMode="CanMinimize"
        Title="AutoFlow" Height="700" Width="1000" Background="#FF3E6FB3" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <TabControl x:Name="Log" HorizontalAlignment="Left" Height="172" Margin="5,485,0,0" VerticalAlignment="Top" Width="790" Background="#FFE6F0FF">
            <TabControl.Resources>
                <Style TargetType="RichTextBox">
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="DockPanel.Dock" Value="Bottom" />
                </Style>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="FontSize" Value="16" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="一般" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxGeneral" Background="#FF43B5BF"/>
            </TabItem>
            <TabItem Header="警告" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxWarning" Background="#FF43AABF"/>
            </TabItem>
            <TabItem Header="錯誤" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxError" Background="#FF43A0BF"/>
            </TabItem>
            <TabItem Header="除錯" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxDebug" Background="#FF4396BF"/>
            </TabItem>
        </TabControl>
        <Image x:Name="Logo" Height="142" Margin="814,514,21,0" VerticalAlignment="Top" Width="159" Source="Icon/DeepWise.png"/>
        <TabControl HorizontalAlignment="Left" Margin="5,3,0,0" VerticalAlignment="Top" Height="478" Width="978" Background="#FFE6F0FF">
            <TabItem Header="主畫面" Style="{StaticResource BaseTabcontrol}">
                <Grid>
                    <Image Name="Display_Image" MouseLeftButtonDown="AddPointButtonDown" MouseLeftButtonUp="AddPointButtonUp" 
                           MouseRightButtonDown="DeletePointButtonDown" MouseRightButtonUp="DeletePointButtonUp" Margin="10,16,231,15"/>
                    <Border BorderBrush="Black" BorderThickness="1" Opacity="1" Margin="10,16,231,15">
                        <Canvas x:Name="Canvas" Margin="0,0,0,0"/>
                    </Border>
                    <Button x:Name="Start" Style="{StaticResource CircleButton}" Width="100" Height="100" Margin="762,26,110,320" Click="Main_Btn_Click">Start</Button>
                    <Button x:Name="Stop" Style="{StaticResource CircleButton}" Width="100" Height="100" Margin="762,139,110,207" Click="Main_Btn_Click">Stop</Button>
                    <Button x:Name="Capture_Screen" Style="{StaticResource CircleButton}" Width="100" Height="100" Margin="762,260,110,86" Content="Capture Screen" Click="Main_Btn_Click"/>
                    <Button x:Name="Step1" Style="{StaticResource CircleButton}" Width="100" Height="100" Margin="860,13,-8,313" Content="步驟1" Click="Main_Btn_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="參數畫面" Style="{StaticResource BaseTabcontrol}">
                <Grid>
                    <ComboBox Style="{StaticResource AdvancedComboBox}" Name="Wafer_Type" HorizontalAlignment="Left" Margin="124,32,0,366" Width="160" IsSynchronizedWithCurrentItem="True" FontSize="18">
                        <ComboBoxItem IsSelected="True">6吋晶圓</ComboBoxItem>
                        <ComboBoxItem>4吋晶圓</ComboBoxItem>
                        <ComboBoxItem>3吋晶圓</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="Open_Setting_File_Path" Style="{StaticResource BaseButton}" Margin="18,144,812,245" Content="開啟Setting檔路徑" FontSize="18" Background="DodgerBlue" Click="Parameter_Btn_Click"/>
                    <TextBox x:Name="Setting_File_Location" Style="{StaticResource SettingBaseTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="32" Margin="174,158,447,256"/>
                    <Button x:Name="Open_VSM_Folder" Style="{StaticResource BaseButton}" Margin="19,214,811,175" Content="開啟vsm檔資料夾" FontSize="18" Background="DodgerBlue" Click="Parameter_Btn_Click"/>
                    <TextBox x:Name="VSM_File_Location" Style="{StaticResource VSMBaseTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="32" Margin="175,229,446,185"/>
                    <Button x:Name="Open_Dat_Folder" Style="{StaticResource BaseButton}" Margin="15,280,815,109" Content="開啟dat檔資料夾" FontSize="18" Background="DodgerBlue" Click="Parameter_Btn_Click"/>
                    <TextBox x:Name="Dat_File_Location" Style="{StaticResource DatBaseTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="32" Margin="175,292,446,122"/>
                    <Button x:Name="Open_Xlsx_Folder" Style="{StaticResource BaseButton}" Margin="17,352,813,37" Content="開啟xlsx檔資料夾" FontSize="18" Background="DodgerBlue" Click="Parameter_Btn_Click"/>
                    <TextBox x:Name="Xlsx_File_Location" Style="{StaticResource XlsxBaseTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="32" Margin="179,362,442,52"/>
                    <WrapPanel Orientation="Horizontal" Margin="533,44,13,172">
                        <Label x:Name="Window_Name_Label" Content="Window Name:" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="69,34,0,0"/>
                        <TextBox x:Name="Window_Name" Style="{StaticResource WindowNameTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="150" Height="32" Margin="0,34,0,0"></TextBox>
                        <Label x:Name="Coordinate_X_Label" Content="Coordinate X:" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="84,34,0,0"/>
                        <TextBox x:Name="Coordinate_X" Style="{StaticResource XTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="150" Height="32" Margin="0,34,0,0"></TextBox>
                        <Label x:Name="Coordinate_Y_Label" Content="Coordinate Y:" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="84,34,0,0"/>
                        <TextBox x:Name="Coordinate_Y" Style="{StaticResource YTextBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="150" Height="32" Margin="0,34,0,0"></TextBox>
                    </WrapPanel>
                    <Button x:Name="Save_Config" Style="{StaticResource BaseButton}" Margin="684,290,146,100" Content="Save Config" FontSize="18" Background="DodgerBlue" Click="Parameter_Btn_Click"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
